/* pages/create/create.wxss */

.container {
  margin: 0;
  padding: 0;
  display: flex;
  flex-wrap: wrap; 
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.container .topoper  {
  background: #D1E7FE;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
}



.container .topoper .templates {
  margin: 15px 10px 0 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  
}

.container .topoper .templates > button::after {
  border: none;
  outline: none;
}

.container .topoper  .templates > button {
  background: #D1E7FE;
  border-radius: 0;
}

.container .topoper  .templates .one {
  text-align: center;
  font-size: 12px; 
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-content: center;
  padding: 0;
  margin: 0;
  width: 52px;
}

.container .topoper .templates  .one .name {
  flex-basis: 100%;
}


.container .rund {
  flex-basis: 100%;
  width: 100%;
  background-color: #FFF;
}

.container .rund .container {
  height: 15px;
  background: #D1E7FE;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
} 
 

.container  .main  {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: center;
}
.container  .main .use {
  width: 100%;
  flex-basis: 100%;
  margin: 15px;
  font-size: 16px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.container  .main .use .name {
  margin-left: 10px;
}
.container .main .createform {
  flex-basis: 100%;
  background: #ffffff;
  overflow: hidden;
  border-radius: 10px;
 }

.container  .main  .createform .item {
  flex-basis: 100%;
}

.container .but {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 72px;
  background: #eecefd;
}

.container .but > button {
  background: #eecefd;
  color: #070726;
  border-top: #ccc 1px solid;
}

.container .but > button::after {
  border: none;
  outline: none;
}