/* pages/create/create.wxss */

.container {
  margin: 0;
  padding: 0;
  display: flex;
  flex-wrap: wrap; 
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.container .topoper  {
  background: #D1E7FE;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
}



.container .topoper .templates {
  margin: 15px 10px 0 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
}

.container .topoper .templates > button::after {
  border: none;
  outline: none;
}

.container .topoper  .templates > button {
  background: #D1E7FE;
  border-radius: 0;
}

.container .topoper  .templates .one {
  text-align: center;
  font-size: 12px; 
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-content: center;
  padding: 0;
  margin: 0;
  width: 52px;
}

.container .topoper .templates  .one .name {
  flex-basis: 100%;
}


.container .rund {
  flex-basis: 100%;
  width: 100%;
  background: #f5f5f6;
}

.container .rund .container {
  height: 15px;
  background: #D1E7FE;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
} 
 

.container  .main  {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start; 
}
.container  .main .use {
  width: 100%;
  flex-basis: 100%;
  font-size: 16px;
  font-weight: bold;
  background: #f5f5f6;
}

.container .main .use .container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10px 0 0 0;
}

.container  .main .use .container .name {
  font-weight: bold;
  margin-left: 10px;
}
 

.container  .main .use .container .description {
  font-weight: normal;
  font-size: 12px;
  color: #646566;
  width: 100%;
  margin-top: 5px;
  flex-basis: 100%;
  text-align: center;
  padding: 0 10px;
}

.container  .main .rund {
  flex-basis: 100%;
  width: 100%;
  background-color: #FFF;
}

.container  .main .rund .container {
  height: 15px;
  background: #f5f5f6;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
} 

.container .main .createform {
  flex-basis: 100%;
  background: #ffffff;
  overflow: hidden;
  border-radius: 10px;
  margin-top: 10px;
 }
 

.container .main .createform .tags {
  flex-basis: 100%;
  padding: 10px;
  border-bottom: #cccccc 1px dashed;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-end;
  flex-wrap: wrap;
}

.container .main .createform .tags .van-tag {
  margin: 5px;
}

.container .main .createform .tags .tagadd {
  margin: 5px;
  padding: 0 15px;
  background: #eecefd;
  border-radius: 5px;
}

.container  .main  .createform .media{
  display: flex;
  flex-direction: row;
  flex-basis: 100%;
  align-items: flex-start;
  justify-content: flex-start;
  align-content: flex-end;
  flex-wrap: wrap;
  margin-top: 5px;
  padding: 10px;
}
.container  .main  .createform .media .item {
  width: 64px;
  height: 64px;
  border: #ccc 1px solid;
  margin: 5px;
  flex-basis: unset;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  border-radius: 5px;
}

.container .but {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 76px;
  background: #eecefd;
}

.container .but > button {
  background: #eecefd;
  color: #070726;
  padding:5px 40px 10px 40px;
  border-top: #ccc 1px solid;
}

.container .but > button::after {
  border: none;
  outline: none;
}