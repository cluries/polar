/* pages/history/history.wxss */

.container {
  display: block;
  padding: 0;
  margin: 0;
  /* background:linear-gradient(45deg, #ffffff 0%, #D1E7FE 100%); */
  background: #D1E7FE;
  min-height: 960px;
}

.container .history {
  padding: 10px;
  margin: 0;
 }

.container .history .group {
  /* background:linear-gradient(45deg, #ffffff 0%, #D1E7FE 100%); */
  background-color: #ffffff;
  margin: 10px 0;
  border: #D1E7FE 1px solid;
  border-radius: 10px;
  overflow: hidden;
}


.container .history .group .meta {
  padding: 10px;
  border-bottom: #D1E7FE 1px solid;
  font-weight: bold;
}

.container .history .group .meta .recordsnumber {
  float: right;
  font-weight: normal;
}

.container .history .group .content {
  /* min-height: 96px; */
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
 
.container .history .group .content .loc {
  background-color: #cccccc;
}