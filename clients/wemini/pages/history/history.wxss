/* pages/history/history.wxss */

.container {
  display: block;
  padding: 0;
  margin: 0;
  background: #D1E7FE;
  min-height: 960px;
}

.container .history {
  padding: 10px;
  margin: 0;
}

.container .history .group {
  background-color: #ffffff;
  margin: 10px 0;
  border: #D1E7FE 1px solid;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 5px 5px 20px  #BAF1E3;
  color: #070726;
}


.container .history .group .meta {
  padding: 10px;
  border-bottom: #D1E7FE 1px solid;
  font-weight: bold;
}

.container .history .group .meta .recordsnumber {
  float: right;
}

.container .history .group .content {
  padding: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 14px;  
  flex-wrap: wrap;
}

.container .history .group .content > view {
  padding: 6px;

}
 
.container .history .group .content .loc {
  flex-basis: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-bottom: #D1E7FE 1px solid;
}

 
.container .history .group .content .loc  .title {
  font-weight: bold;
  flex-basis: 100%;
  margin-bottom: 5px;
}

.container .history .group .content .loc .weather{
  flex-basis: 45%;
}

.container .history .group .content .loc .pm{
  flex-basis: 45%;
  text-align: right;
} 

.container .history .group .content .money {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}


.container .history .group .content .money > view {
  margin-right: 10px;
}


.container .history .group .content .mood {
  text-align: right;
}

 