/* pages/home/home.wxss */


.container {
  padding: 0;
  margin: 0; 
 }
 
.header {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-end;
  align-items: stretch;
  background-color: #f5f8fd;  
}

.header .headertop {
  background-color: #99de9f;
  flex-basis: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-end;
  align-items: stretch;
}

.header  .headertop .progress {
  flex-grow: 1;
  flex-basis: 100%;
  margin-top: 5px;
}

.header  .headertop .profile {
  flex-basis: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items:flex-start;
  justify-content: flex-start;
}

.header  .headertop .profile .avatar {
  text-align: center;
  overflow: hidden;
  width: 64px;
  height:64px;
  margin: 0 0 0 15px;
  border-radius: 50%;
  border: #F76360 1px solid;
}

.header  .headertop .profile .info {
  text-align: left;
  margin-left: 10px;
}

.header .headertop .profile .info .name {
  color: #000639;
  font-weight: bold;
  font-size: 16px;
  padding: 0;
}

.header .headertop .profile  .info  .slogen {
  font-weight: normal;
  font-size: 14px;
  display: flex;
  color:#F76360;
}

.header .fixeds {
  flex-basis: 100%;
  background-color: #f5f8fd;
}

.header .fixeds .container {
  padding:10px 10px 15px 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  align-items: stretch;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
  background-color: #99de9f;
}

.header .fixeds .container .one {
  flex-basis: 32%;
  border-radius: 5px;
  overflow: hidden;
  font-size: 14px;
  background: #fff;
  overflow: hidden;
}

.header .fixeds .container .one h3 {
  font-size: 12px;
  display: block;
  padding: 3px 10px;
  color:#000639;
  background-color: #f5f8fd;
}

.header .fixeds .container .one .content {
  text-align: center;
}
 
.header .fixeds .container .one .content .primary {
  font-weight: bold;
  padding: 5px;
  text-align: right;
}

.header .fixeds .container .one .content .second {
  font-weight: normal;
  padding: 0 5px 5px 5px;
  text-align: left;
}

.header .opera {
  background-color: #f5f8fd;
  flex-basis: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: stretch;
  align-content: flex-start;
  padding: 15px 15px 0 15px;
}

.header .rund {
  flex-basis: 100%;
  background-color: #FFF;
}

.header .rund .container {
  height: 15px;
  background: #f5f8fd;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
}

.main {
  width: 100%;
  background: #FFF;
}



.main .create {
  position: fixed;
  bottom: 25px;
  right: 25px;
  background-color: #ffb059;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: #13227A 5px solid;
  display: flex;
  justify-content: center;
  align-items: center;
}

.main .steps {
  font-size: 14px;
}

.mian .steps .sectiontitle {
  margin-top: 20px; 
  clear: both;
  display: block;
}

.main .steps .sectiontitle h3{
  display: block;
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
  padding: 10px;
  padding-bottom: 0;
}

.main .steps .container{
  padding: 0 10px ;
}

.main .steps .one {
  min-height: 96px;
  overflow: hidden;
  border-radius: 10px;
  width: 100%;
  margin: 10px 0; 
  background-image: linear-gradient(120deg, #fdfbfb 0%, #f5f8fd 100%);
  box-shadow: 2px 2px 20px  #ccc;
}

.footer {
  position: fixed;
  height: 64px;
  bottom: 0;
  left: 0;
  width: 100%;
}