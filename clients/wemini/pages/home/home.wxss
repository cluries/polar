/* pages/home/home.wxss */


.container {
  padding: 0;
  margin: 0; 
 }
 
.header {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: stretch;
  align-content: flex-start;
  background-color: #4af2a1;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
  padding-bottom: 5px;
}

.header  .progress {
  flex-grow: 1;
  flex-basis: 100%;
}

.header  .profile {
  flex-basis: 25%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  align-content: flex-start;
  text-align: center;
}

.header .profile .avatar {
  text-align: center;
  overflow: hidden;
  width: 64px;
  height:64px;
  margin: 0;
  border-radius: 50%;
  border: #595A4A 1px solid;
}

.header .profile .name {
  text-align: center;
  color: #363635;
  font-weight: bold;
  font-size: 14px;
  padding: 5px;
}

.header .info {
  flex-basis: 65%;
  font-weight: normal;
  font-size: 14px;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  color:#555555;
}

.header .info .item {
  padding: 5px;
  /* flex-basis: 33%; */
  height: 20px;
  flex-grow: 0;
}

.header .state {
  flex-basis: 10%;
}

.header .opera {
  flex-basis: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: stretch;
  align-content: flex-start;
  padding: 10px ;
}

.header .opera .one {
  flex-basis: 32%;
  border-radius: 5px;
  overflow: hidden;
  font-size: 14px;
  border: #ccc 1px solid;
  background: #eeeeee;
}

.header .opera .one h3 {
  font-size: 12px;
  display: block;
  padding: 3px 10px;
  color:#FFF;
  background-color: #ffb059;
}

.header .opera .one .content {
  text-align: center;
}
 
.header .opera .one .content .primary {
  font-weight: bold;
  padding: 5px;
  text-align: right;
}

.header .opera .one .content .second {
  font-weight: normal;
  padding: 0 5px 5px 5px;
  text-align: left;
}
 

.main {
  display: block;
  width: 100%;
  background: #FFF;
}



.main .create {
  position: absolute;
  bottom: 25px;
  right: 25px;
  background-color: #ffb059;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: #13227A 5px solid;
  display: flex;
  justify-content: center;
  align-items: center;
}

.main .steps {
  font-size: 14px;
}

.main .steps .one {
  min-height: 64px;
  margin: 5px;
  border-bottom: #eeeeee 1px solid;
  overflow: hidden;
}

.footer {
  position: fixed;
  height: 64px;
  bottom: 0;
  left: 0;
  width: 100%;
}